<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="cn.bingoogolapple.qrcode.zxingdemo.LoginActivity">

    <ImageView
        android:id="@+id/language_spinner"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/language" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="165dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@color/colorLoginBackground"
            android:hint="@string/username_default"
            android:maxLines="1"
            android:shadowColor="@color/colorShadow"
            android:textColor="@color/colorEditText"
            android:textColorHint="@color/colorHintText"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLoginBackground"
            android:hint="@string/password_default"
            android:maxLines="1"
            android:shadowColor="@color/colorShadow"
            android:textColor="@color/colorEditText"
            android:textColorHint="@color/colorHintText"
            android:textSize="16dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <!--<Button-->
        <!--android:id="@+id/login_btn"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:background="@drawable/login_btn"-->
        <!--android:onClick="onClick_login"-->
        <!--android:shadowColor="@color/colorShadow"-->
        <!--android:shadowDy="10" />-->

        <!--<Button-->
        <!--android:id="@+id/settings_btn"-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:background="@drawable/settings_btn"-->
        <!--android:onClick="onClick_settings"-->
        <!--android:shadowColor="@color/colorShadow"-->
        <!--android:shadowDy="10" />-->

        <Button
            android:id="@+id/login_btn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/login_button"
            android:onClick="onClick_login"
            android:src="@drawable/login_button" />

        <Button
            android:id="@+id/settings_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/settings_button"
            android:onClick="onClick_settings"
            android:src="@drawable/settings_button" />


    </RelativeLayout>


</RelativeLayout>
